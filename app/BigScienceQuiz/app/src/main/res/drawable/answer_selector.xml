<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/club.eslcc.bigsciencequiz">

    <item
        app:state_wrong="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="@color/wrong_button_stroke" />
            <gradient
                android:angle="-90"
                android:startColor="@color/wrong_button_start"
                android:endColor="@color/wrong_button_end" />
        </shape>
    </item>

    <item
        app:state_right="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="@color/right_button_stroke" />
            <gradient
                android:angle="-90"
                android:startColor="@color/right_button_start"
                android:endColor="@color/right_button_end" />
        </shape>
    </item>

    <item
        app:state_none="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="@color/pressed_button_stroke" />
            <gradient
                android:angle="-90"
                android:startColor="@color/pressed_button_start"
                android:endColor="@color/pressed_button_end" />
        </shape>
    </item>

    <item
        app:state_none="true"
        android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="@color/focused_button_stroke" />
            <gradient
                android:angle="-90"
                android:startColor="@color/focused_button_start"
                android:endColor="@color/focused_button_end" />
        </shape>
    </item>

    <item
        app:state_none="true"
        app:state_right="false"
        app:state_wrong="false"
        android:state_pressed="false"
        android:state_focused="false"
        android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="@color/defocused_button_stroke" />
            <gradient
                android:angle="-90"
                android:startColor="@color/defocused_button_start"
                android:endColor="@color/defocused_button_end" />
        </shape>
    </item>
</selector>